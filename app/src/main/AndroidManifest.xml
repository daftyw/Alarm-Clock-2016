<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.augmentis.ayp.alarmclock">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".AlarmListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".AlarmActivity"
                  android:label="@string/alarm_clock" >

        </activity>

        <activity android:name=".AlarmEditActivity"
                  android:label="@string/edit_alarm_clock"
                  android:parentActivityName=".AlarmListActivity">

        </activity>

    </application>

</manifest>